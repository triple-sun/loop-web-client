{
	"name": "loop-client",
	"version": "0.0.5",
	"main": "build/index.js",
	"description": "\"Loop/Mattermost TypeScript client\"",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"test": "jest",
		"build": "rimraf ./build && tsc -p tsconfig.json",
		"format": "biome format --write",
		"gen:zod": "./scripts/gen-zod-schemas.sh",
		"lint": "biome lint ./src",
		"prepare": "husky",
		"prepublishOnly": "biome format --write && lint-staged --allow-empty && husky && jest && rimraf ./build && tsc -p tsconfig.json",
		"test:real:base": "jest --testPathIgnorePatterns=null",
		"test:real:only": "jest --testPathIgnorePatterns=null --testMatch=\"**/test/integration/real-api/*.test.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/triple-sun/loop-client.git"
	},
	"author": "triple-sun",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/triple-sun/loop-client/issues"
	},
	"homepage": "https://github.com/triple-sun/loop-client#readme",
	"files": [
		"build/**/*",
		"*.md"
	],
	"dependencies": {
		"@triple-sun/logger": "^0.0.1",
		"again-ts": "^1.0.5",
		"axios": "^1.13.3",
		"breadline-ts": "^1.1.0",
		"eventemitter3": "^5.0.4",
		"form-data": "^4.0.5",
		"is-stream": "^4.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@tsconfig/recommended": "^1",
		"@types/jest": "^30.0.0",
		"@types/nock": "^10.0.3",
		"@types/node": "^25.0.10",
		"dotenv": "^17.2.3",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"nock": "^15.0.0",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"ts-to-zod": "^5.1.0",
		"tsd": "^0.33.0",
		"typescript": "5.9.3",
		"zod": "^4.3.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched"
		],
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		],
		"test/integration/real-api/schemas/*": []
	}
}
