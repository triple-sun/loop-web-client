{
	"name": "loop-client",
	"version": "0.0.1",
	"main": "build/index.js",
	"description": "\"Loop/Mattermost TypeScript client\"",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"test": "jest",
		"build": "rimraf ./build && tsc -p tsconfig.json",
		"format": "biome format ./src --write",
		"lint": "biome lint ./src",
		"prepare": "husky && jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/triple-sun/loop-client.git"
	},
	"author": "triple-sun",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/triple-sun/loop-client/issues"
	},
	"homepage": "https://github.com/triple-sun/loop-client#readme",
	"files": [
		"build/**/*",
		"*.md"
	],
	"dependencies": {
		"@triple-sun/logger": "^0.0.1",
		"again-ts": "^1.0.0",
		"axios": "^1.13.3",
		"breadline-ts": "^1.0.0",
		"eventemitter3": "^5.0.4",
		"form-data": "^4.0.5",
		"is-stream": "^4.0.1",
		"qs": "^6.14.1",
		"ws": "^8.19.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@tsconfig/recommended": "^1",
		"@types/jest": "^30.0.0",
		"@types/nock": "^10.0.3",
		"@types/node": "^25.0.10",
		"@types/qs": "^6.14.0",
		"@types/ws": "^8.5.11",
		"dotenv": "^17.2.3",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"nock": "^15.0.0",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"tsd": "^0.33.0",
		"typescript": "5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched"
		],
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
