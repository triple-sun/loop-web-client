{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"recommended": true
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/build",
			"!**/.sanity",
			"!**/dist",
			"!**/.next",
			"!**/oldsrc",
			"!**/test/integration/real-api/schemas/*"
		]
	},
	"formatter": {
		"attributePosition": "auto",
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"assist": { "enabled": true },
		"formatter": {
			"arrowParentheses": "asNeeded",
			"jsxQuoteStyle": "single",
			"quoteStyle": "double",
			"trailingCommas": "none"
		},
		"linter": { "enabled": true }
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"linter": {
		"domains": {
			"project": "recommended",
			"test": "recommended"
		},
		"enabled": true,
		"rules": {
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"noAdjacentSpacesInRegex": "error",
				"noArguments": "warn",
				"noBannedTypes": "error",
				"noEmptyTypeParameters": "error",
				"noExcessiveCognitiveComplexity": {
					"level": "info",
					"options": { "maxAllowedComplexity": 20 }
				},
				"noExcessiveLinesPerFunction": {
					"level": "info",
					"options": { "maxLines": 85, "skipBlankLines": true }
				},
				"noExcessiveNestedTestSuites": "error",
				"noExtraBooleanCast": "warn",
				"noForEach": "info",
				"noImplicitCoercions": "error",
				"noStaticOnlyClass": "info",
				"noUselessCatch": "error",
				"noUselessConstructor": "error",
				"noUselessEscapeInRegex": "warn",
				"noUselessStringConcat": "error",
				"noUselessUndefinedInitialization": "error",
				"noVoid": "error",
				"recommended": true,
				"useDateNow": "error",
				"useLiteralKeys": "off",
				"useWhile": "info"
			},
			"correctness": {
				"noConstAssign": "error",
				"noConstantCondition": "error",
				"noConstantMathMinMaxClamp": "error",
				"noConstructorReturn": "error",
				"noEmptyCharacterClassInRegex": "error",
				"noEmptyPattern": "warn",
				"noInnerDeclarations": "error",
				"noInvalidBuiltinInstantiation": "error",
				"noInvalidConstructorSuper": "warn",
				"noInvalidUseBeforeDeclaration": "warn",
				"noUndeclaredVariables": "error",
				"noUnreachable": "error",
				"noUnsafeFinally": "error",
				"noUnusedFunctionParameters": "error",
				"noUnusedImports": "error",
				"noUnusedPrivateClassMembers": "error",
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": {
					"level": "error",
					"options": {
						"reportUnnecessaryDependencies": false
					}
				}
			},
			"nursery": { "noImportCycles": "error", "recommended": true },
			"performance": {
				"noAccumulatingSpread": "error",
				"noAwaitInLoops": "error"
			},
			"recommended": true,
			"security": { "recommended": true },
			"style": {
				"noParameterProperties": "error",
				"noYodaExpression": "error",
				"useArrayLiterals": "error",
				"useConsistentBuiltinInstantiation": "error",
				"useFragmentSyntax": "error",
				"useShorthandAssign": "error"
			},
			"suspicious": {
				"noAssignInExpressions": "error",
				"noEmptyBlockStatements": "error",
				"noEvolvingTypes": "error",
				"noExplicitAny": "error",
				"noImportAssign": "error",
				"noVar": "error",
				"useAwait": "error"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
